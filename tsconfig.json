{
  "compilerOptions": {
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es6",
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.js"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}